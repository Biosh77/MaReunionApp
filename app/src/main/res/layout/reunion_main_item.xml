<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dip">

    <TextView
        android:id="@+id/fragment_main_item_reunion"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/item_list_user_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_main_item_reunion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_main_item_reunion"
        android:src="@drawable/ic_trash_can_foreground"
        android:layout_marginRight="16dp" />

</LinearLayout>