<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/color_button"
        android:layout_toLeftOf="@id/Layout_trash"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_main_item_reunion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
             />

        <TextView
            android:id="@+id/fragment_main_item_reunion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
           />

    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/Layout_trash"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

    <ImageButton
        android:id="@+id/item_list_user_delete_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:src="@drawable/ic_trash_can_foreground"
        tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <ImageView
        android:id="@+id/color_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_color_foreground" />
</RelativeLayout>